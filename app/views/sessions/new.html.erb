






<div class="row">

  <div class="col-sm-6 col-sm-offset-1">
  <h1>Login!</h1>

<%= form_tag '/login' do %>

    <div class="form-group">
      <p>Email</p>
      <%= text_field_tag :email %>
    </div>


    <div class="form-group">
      <p>Password</p>
      <%= password_field_tag :password %>
    </div>
   
     <%= submit_tag "Submit"%>
    <% end %>

  </div>
</div>